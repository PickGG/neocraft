body{
	font-family: Grixel Acme 7 Wide Xtnd;
	font-weight: normal;
	font-style: normal;
	font-size: 16dp;
	color: white;
	width: 100vw;
	height: 100vh;
	
	display: flex;
	align-items: center;
	justify-content: center;
	flex-direction: column;
	gap: 5dp 0;
}

button{
	margin-left: auto;
	margin-right: auto;
	width: 300dp;
	background-color: gray;
	padding: 10dp;
	text-align: center;
	border: 1dp;
}

button:hover{
	border-color: gray;
}